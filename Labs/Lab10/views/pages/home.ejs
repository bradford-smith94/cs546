                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">x</button>
                                    <h2>Spoiler Alert!</h2>
                                    <p>This page contains spoilers! If you would like to discover the story on your own you may want to turn back now.</p>
                                    <p>
                                        <button id="spoiler-leave-btn" type="button" class="btn btn-danger" onclick="avoidSpoilers()">Leave Now</button>
                                        <button id="spoiler-dismiss-btn" type="button" class="btn" data-dismiss="alert">Dismiss</button>
                                    </p>
                                </div>
                                <div class="panel panel-primary">
                                    <div class="panel-heading"><h2>Plot of Game</h2></div>
                                    <div class="panel-body"><p>In here be spoilers!</p></div>
                                </div>
                            </div>
                        </div>
                    </div> <!-- tabs row -->
                </div> <!-- right column -->
            </div> <!-- row -->
            <div class="row">
                <div class="panel panel-info">
                    <div class="panel-heading"><h2>Survey</h2></div>
                    <div class="panel-body">
                        <form class="form-horizontal">
                            <div class="form-group">
                                <label for="survey-email" class="col-xs-2 control-label">Email:</label>
                                <div class="col-xs-10">
                                    <input type="email" class="form-control" id="survey-email" placeholder="you@somewhere.com">
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-xs-offset-2">
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div> <!-- row -->
        </div> <!-- container -->

        <!-- script to allow alert button to change tabs -->
        <script> function avoidSpoilers() { $('#mytabs a[href="#about"]').tab('show') } </script>

        <% include ../partials/scripts %>
    </body>

</html>
